{
    "compileOnSave": false,
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "outDir": "dist"
    },
    "exclude": ["node_modules"],
    "include": [
        "algorithm/src/**/*.ts",
        "src/**/*.ts"
    ]
}
