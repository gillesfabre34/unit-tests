{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es2018",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
