{
    "compileOnSave": false,
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "exclude": ["node_modules", "src/mocks", "src/mocks/examples/if-continue-route"],
    "include": [
        "src/**/*.ts"
    ]
}
